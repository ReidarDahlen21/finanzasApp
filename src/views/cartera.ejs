<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Cartera</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">

  <style>
    body {
      font-family: 'Roboto Condensed', sans-serif;
      background-color: #f8f9fa;
      padding: 2rem;
    }    
  </style>
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="container-fluid mb-3">
    <h3 class="text-start"><%= tituloPagina %></h3>
  </div>
  
  <div class="container-fluid mt-3">
    <h3 class="text-start mb-4">Cartera</h3>

    <% for (let tipo in cartera) { %>
      <h5 class="mt-4"><%= tipo %></h5>
      <table class="table table-sm table-bordered table-hover">
        <thead class="table-light">
          <tr>
            <th>Ticker</th>
            <th>Nominales</th>
            <th>Total USD</th>
            <th>Costo Promedio USD</th>
          </tr>
        </thead>
        <tbody>
          <% cartera[tipo].forEach(item => { %>
            <tr>
              <td><%= item.ticker %></td>
              <td><%= item.nominales %></td>
              <td><%= item.total_usd.toFixed(2) %> u$d</td>
              <td><%= item.costo_promedio.toFixed(2) %> u$d</td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>
